<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <!-- Indicadores (puntos de navegación) -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 4"></button>
    </div>

    <!-- Imágenes del Carrusel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/domicilios.jpeg" class="d-block w-100" alt="Domicilios">
        </div>
        <div class="carousel-item">
            <img src="~/img/plato1.jpeg" class="d-block w-100" alt="Plato 1">
        </div>
        <div class="carousel-item">
            <img src="~/img/plato2.jpeg" class="d-block w-100" alt="Plato 2">
        </div>
        <div class="carousel-item">
            <img src="~/img/plato3.jpeg" class="d-block w-100" alt="Plato 3">
        </div>
    </div>

    <!-- Controles (Botones para cambiar de imagen) -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>