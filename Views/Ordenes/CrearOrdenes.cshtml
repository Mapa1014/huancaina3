@*
*@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="btn btn-primary" asp-area="" asp-controller="Ordenes" asp-action="CrearOrdenes">Crear nueva orden</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
@{
    <main>
        <div class="container mt-5">
            <div class="text-center mb-4">
                <h2 class="h2-fac">Registro de una orden</h2>
                <hr>
            </div>
            <form asp-controller="Ordenes" asp-action="CrearOrdenes" method="post" class="row g-3 needs-validation" novalidate>
                <div class="col-md-5">
                    <label for="id_orden" class="form-label">Id orden*</label>
                    <input type="number" id="id_orden" name="id_orden" class="form-control" placeholder="Ingrese el numero de Orden" required>
                    <div class="invalid-feedback">Debe ingresar un número de orden válido.</div>
                </div>

                <div class="col-md-5">
                    <label for="n_mesa" class="form-label">N° mesa*</label>
                    <input type="number" id="n_mesa" name="n_mesa" class="form-control" placeholder="Número de mesa" required>
                    <div class="invalid-feedback">Debe ingresar un número de mesa válido.</div>
                </div>

                <div class="col-md-5">
                    <label for="fecha_orden" class="form-label">Fecha orden*</label>
                    <input type="date" id="fecha_orden" name="fecha_orden" class="form-control" placeholder="Fecha de la orden" required>
                    <div class="invalid-feedback">Debe ingresar una fecha válida.</div>
                </div>

                <div class="form-select" aria-label="Estado">
                    <label class="form-label" for="estado">Estado</label>
                    <select class="form-select" id="estado" name="estado" required>
                        <option value="" selected disabled>Seleccione un estado</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="En preparación">En preparación</option>
                        <option value="Listo para servir">Listo para servir</option>
                        <option value="Entregado">Entregado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                    <div class="invalid-feedback">Debe seleccionar un estado.</div>
                </div>

                <div class="col-md-5">
                    <label for="observaciones" class="form-label">Observaciones</label>
                    <input type="text" id="observaciones" name="observaciones" class="form-control" placeholder="Ingrese sus observaciones">
                </div>

                <div class="col-md-5">
                    <label for="id_usuario" class="form-label">Id Usuario</label>
                    <input type="number" id="id_usuario" name="id_usuario" class="form-control" placeholder="id_usuario" required>
                    <div class="invalid-feedback">Debes ingresar tu id.</div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>

            
            <hr>

            <div class="text-center">
                <h5>HUANCAINA</h5>
            </div>

        </div>
    </main>
}
